{
  "name": "persistent-sessions-protocol",
  "version": "0.1.0",
  "description": "A unified protocol for browser session persistence across automation frameworks",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx --config .eslintrc.json",
    "lint:fix": "eslint . --ext .ts,.tsx --config .eslintrc.json --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --config .prettierrc.json --ignore-path .prettierignore",
    "build": "npm run build:core && npm run build:adapters && npm run build:cli && npm run build:server",
    "build:core": "cd packages/core && npm run build",
    "build:adapters": "cd packages/adapters/playwright && npm run build && cd ../stagehand && npm run build && cd ../skyvern && npm run build && cd ../hyperbrowser && npm run build",
    "build:cli": "cd packages/cli && npm run build",
    "build:server": "cd packages/server && npm run build",
    "dev:server": "cd packages/server && npm run dev",
    "start:server": "cd packages/server && npm start",
    "install:all": "npm install && npm run install:packages",
    "install:packages": "cd packages/core && npm install && cd ../adapters/playwright && npm install && cd ../stagehand && npm install && cd ../skyvern && npm install && cd ../hyperbrowser && npm install && cd ../../../cli && npm install && cd ../server && npm install",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "psp:demo": "node psp-working-implementation.js demo",
    "psp:enhanced": "node psp-enhanced-implementation.js",
    "psp:capture": "node psp-working-implementation.js capture",
    "psp:auth": "node psp-working-implementation.js auth",
    "psp:list": "node psp-working-implementation.js list",
    "psp:load": "node psp-working-implementation.js load",
    "psp:cleanup": "node scripts/cleanup-sessions.js all",
    "psp:cleanup:old": "node scripts/cleanup-sessions.js old 7",
    "psp:sessions": "node scripts/cleanup-sessions.js list",
    "server:start": "cd packages/server && npm start",
    "server:dev": "cd packages/server && npm run dev",
    "cli:install": "cd packages/cli && npm install -g .",
    "deploy": "npm run build && npm run server:start",
    "docker:build": "docker build -t psp-server .",
    "docker:run": "docker run -p 3000:3000 psp-server",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "integration:all": "npm run psp:demo && npm run psp:capture && npm run psp:list",
    "prepare": "husky"
  },
  "keywords": [
    "browser",
    "session",
    "persistence",
    "automation",
    "playwright",
    "selenium",
    "testing"
  ],
  "author": "PSP Contributors",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "semantic-release": "^24.2.6",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3",
    "vuepress": "^2.0.0-beta.62"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "protobufjs": "^7.2.4",
    "puppeteer": "^24.12.0",
    "redis": "^4.7.1",
    "selenium-webdriver": "^4.34.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.13.0"
  }
}
