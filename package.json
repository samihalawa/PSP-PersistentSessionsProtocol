{
  "name": "psp-v2",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:types": "npm run build -w packages/types",
    "build:adapters": "npm run build -w packages/adapters",
    "build:server": "npm run build -w packages/server",
    "build:cli": "npm run build -w packages/cli",
    "build:mcp": "npm run build -w packages/mcp-server",
    "start:server": "npm run start -w packages/server",
    "start:cli": "npm run start -w packages/cli",
    "start:mcp": "npm run start -w packages/mcp-server"
  }
}