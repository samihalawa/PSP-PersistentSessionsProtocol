{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@psp/*": ["packages/*/src"]
    }
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.d.ts", "packages/gui/**/*", "packages/sdk-go/**/*", "packages/sdk-python/**/*", "packages/mcp/**/*"]
}
