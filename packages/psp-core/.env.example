# PSP Configuration Environment Variables

# Storage Backend Configuration
PSP_STORAGE_BACKEND=cloudflare-r2
# Options: local, s3, cloudflare-r2, github, huggingface

# Local Storage (when backend=local)
PSP_LOCAL_BASE_PATH=~/.psp

# Cloudflare R2 Configuration (when backend=cloudflare-r2)
PSP_R2_ACCESS_KEY_ID=c6869c823ac4981a6f26553cd9f4e41d
PSP_R2_SECRET_ACCESS_KEY=4adab83c683a570d48936a615e68ef0e6b44d4218c3890d945e7447f4c71d172
PSP_R2_ENDPOINT=https://21d8251b2204f8dfa7df681246d76705.r2.cloudflarestorage.com
PSP_R2_BUCKET=psp-sessions

# S3 Configuration (when backend=s3)
# PSP_S3_ACCESS_KEY_ID=your-s3-access-key
# PSP_S3_SECRET_ACCESS_KEY=your-s3-secret-key
# PSP_S3_REGION=us-east-1
# PSP_S3_BUCKET=your-psp-bucket
# PSP_S3_ENDPOINT=https://s3.amazonaws.com

# GitHub Configuration (when backend=github)
# PSP_GITHUB_TOKEN=your-github-token
# PSP_GITHUB_OWNER=your-username
# PSP_GITHUB_REPO=psp-sessions
# PSP_GITHUB_BRANCH=main

# HuggingFace Configuration (when backend=huggingface)
# PSP_HF_TOKEN=your-hf-token
# PSP_HF_SPACE=your-username/psp-sessions

# Compression Settings
PSP_COMPRESSION_ENABLED=true
PSP_COMPRESSION_ALGORITHM=gzip
# Options: gzip, brotli, lz4
PSP_COMPRESSION_LEVEL=6

# Encryption Settings
PSP_ENCRYPTION_ENABLED=false
PSP_ENCRYPTION_ALGORITHM=aes-256-gcm
# Options: aes-256-gcm, chacha20-poly1305
# PSP_ENCRYPTION_KEY=your-encryption-key-here

# Sync Settings
PSP_AUTO_SYNC=true
PSP_SYNC_INTERVAL=300000
# Interval in milliseconds (300000 = 5 minutes)

# Capture Settings
PSP_EXCLUDE_EXTENSIONS=false
PSP_MAX_PROFILE_SIZE=5368709120
# Size in bytes (5368709120 = 5GB)
